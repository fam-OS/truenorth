# Database
DATABASE_URL="postgresql://username:password@localhost:5432/truenorth"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Production Environment Variables
NODE_ENV="production"

# SMTP (for OTP emails)
# Example for Postmark SMTP
SMTP_HOST="smtp.postmarkapp.com"
SMTP_PORT="587"
SMTP_USER="<postmark-server-token>"
SMTP_PASS="<postmark-server-token>"
EMAIL_FROM="TrueNorth <no-reply@yourdomain.com>"
# Optional Postmark message stream header
EMAIL_STREAM="true-north"
